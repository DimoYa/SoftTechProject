<div class="container body-content">
    <div class="row">
        <div class="col-md-12">
            <user>
                <header>
                    <h3>Hello, {{user.fullName}}!</h3>
                </header>
                {{#if user.avatarPath}}
                    <img src="{{user.avatarPath}}" width="150" alt="Image">
                {{/if}}

                <div class="row">
                    {{#each articles}}
                        <div class="col-md-6">
                            <article>
                                <header>
                                    <h2>{{this.article}}</h2>
                                </header>

                                <p>{{this.content}}
                                </p>

                                <small class="author">
                                    {{this.author.fullName}}
                                </small>

                                <footer>
                                    <div class="pull-right">
                                        <a class="btn btn-default btn-xs" href="/article/details/{{this.id}}">Read more &raquo;</a>
                                    </div>
                                </footer>
                            </article>
                        </div>
                    {{/each}}
                </div><br>
                <footer>
                    <div class="pull-right">
                        <a class="btn btn-default btn-xs" href="/">Back &raquo;</a>
                    </div>
                </footer>
            </user>
        </div>
    </div>
</div>